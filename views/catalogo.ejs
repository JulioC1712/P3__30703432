        <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    
            <div class="caja">
                <h1>Tienda Fit</h1>
            </div>
    
    
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><strong>Pagina Reporte</strong></a>
