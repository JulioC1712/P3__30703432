                                <input type="text" name="nombre" id="nombre" placeholder="Ingrese el nombre del producto" >
                                <button type="submit" class="btn btn-outline-primary">Buscar</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form action="/searchdescrp" method="post">
                                <input type="text" name="descripcion" id="descripcion" placeholder="Ingrese una descripcion del producto" >
                                <button type="submit" class="btn btn-outline-primary">Buscar</button>
