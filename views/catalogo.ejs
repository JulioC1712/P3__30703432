                            <form action="/filtromarca" method="post">
                                <select name="marca" id="marca">
                                    <option value="" >--Marcas--</option>
                                    <% if (datos) { %>
                                        <% for (let i = 0; i < datos.length; i++){  %>
                                            <% if (datos) { %>
                                                <option value="<%= datos[i].marca %>"><%= datos[i].marca %></option>
                                            <% } %>
                                        <% } %>
                                    <% } else { %>
                                        <option value="">No existen productos en el sistema</option>
                                    <% }   %>
                                </select>
                                <button type="submit" class="btn btn-outline-primary">Filtrar productos</button>
                            </form>

                            <form action="/filtrodp" method="post">
                                <select name="deporte" id="deporte">
                                    <option value="" >--Deporte--</option>
                                    <% if (datos) { %>
                                        <% for (let i = 0; i < datos.length; i++){  %>
                                            <% if (datos) { %>
                                                <option value="<%= datos[i].deporte %>"><%= datos[i].deporte %></option>
                                            <% } %>
                                        <% } %>
                                    <% } else { %>
                                        <option value="0">No existen productos en el sistema</option>
